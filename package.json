{
  "name": "esy-prebuilt-util",
  "version": "0.1.2",
  "description": "Starter Reason Esy Pesy Project",
  "esy": {
    "build": "dune build -p esy-prebuilt",
    "buildDev": "refmterr dune build -p esy-prebuilt",
    "NOTE": "Optional release Section. Customizes result of `esy release`",
    "release": {
      "releasedBinaries": [
        "EsyPrebuiltApp.exe"
      ]
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "buildDirs": {
    "test": {
      "imports": [
        "Library = require('esy-prebuilt/library')",
        "Rely = require('rely/lib')"
      ],
      "flags": [
        "-linkall",
        "-g",
        "-w",
        "-9"
      ]
    },
    "testExe": {
      "imports": [
        "Test = require('esy-prebuilt/test')"
      ],
      "bin": {
        "RunEsyPrebuiltTests.exe": "RunEsyPrebuiltTests.re"
      }
    },
    "library": {
      "imports": [
        "Fs = require('fs/lib')",
        "Path = require('fp')",
        "Base = require('base')"
      ]
    },
    "bin": {
      "imports": [
        "Library = require('esy-prebuilt/library')"
      ],
      "bin": {
        "EsyPrebuiltApp.exe": "EsyPrebuiltApp.re"
      }
    }
  },
  "scripts": {
    "start": "esy x EsyPrebuiltApp.exe",
    "test": "esy x RunEsyPrebuiltTests.exe",
    "format": "esy dune build @fmt --auto-promote",
    "doc": "esy dune build @doc",
    "doc-path": "esy echo #{self.target_dir}/default/_doc/_html/index.html"
  },
  "dependencies": {
    "@opam/dune": "*",
    "@reason-native/fs": "*",
    "@reason-native/path": "*",
    "@esy-ocaml/reason": "*",
    "@opam/base": "*",
    "ocaml": "~4.7.0"
  },
  "devDependencies": {
    "@reason-native/rely": "*",
    "@opam/merlin": "*",
    "ocaml": "~4.7.0",
    "@opam/odoc": "*",
    "@pesy/esy-pesy": "0.1.0-alpha.2",
    "refmterr": "*"
  },
  "resolutions": {
    "@reason-native/fs": "facebookexperimental/reason-native:fs.json#399da0bdefa4311af6d3849f2277bfb52024287e",
    "@reason-native/path": "facebookexperimental/reason-native:fp.json#399da0bdefa4311af6d3849f2277bfb52024287e"
  }
}
